@{
    ViewBag.Title = "Principal";
}

<div class="jumbotron">
    <h2><span class="glyphicon glyphicon-wrench" aria-hidden="true"></span> Construcción Segura</h2>
    <p class="lead">Construcción Segura</p>
    @*<p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>*@
</div>

<div class="row">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3>Caracterización de Peligros</h3>
        </div>
        <div class="panel-body">
            <form class="form-horizontal">
                <div class="form-group">
                    <label for="agrupacionPeligro" class="col-sm-3 control-label">Agrupación de Peligro</label>
                    <div class="col-sm-3">
                        @Html.DropDownList("dangerGroup", (IEnumerable<SelectListItem>)ViewBag.dangerGroups, "Seleccione un grupo...", new { @class = "form-control" })
                    </div>
                    <label for="peligro" class="col-sm-2 control-label">Peligro</label>
                    <div class="col-sm-4">
                        <select id="danger" name="danger" class="form-control"></select>
                    </div>  
                </div>
                <div class="form-group">
                    <label for="posiblesEfectos" class="col-sm-3 control-label">Posibles Efectos</label>
                    <div class="col-sm-3">
                        <select id="effect" name="effect" class="form-control"></select>
                    </div>
                    <div class="col-sm-2">
                        <button id="btnAddEffect" type="button" class="btn btn-success">Adicionar</button>
                        <button id="btnNewEffect" type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalEffect">Nuevo</button>
                    </div>
                </div>
                <div class="form-group">
                    <label for="" class="col-sm-3 control-label"></label>
                    <div class="col-sm-9">
                        <table id="effectTable" class="table"></table>
                    </div>
                </div>
                <div class="form-group">
                    <label for="recomendaciones" class="col-sm-3 control-label">Recomendaciones Generales</label>
                    <div class="col-sm-3">
                        <select id="recommendation" name="recommendation" class="form-control"></select>
                    </div>
                    <div class="col-sm-2">
                        <button id="btnAddRecommendation" type="button" class="btn btn-success">Adicionar</button>
                        <button id="btnNewRecommendation" type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalRecommendation">Nueva</button>
                    </div>
                </div>
                <div class="form-group">
                    <label for="" class="col-sm-3 control-label"></label>
                    <div class="col-sm-9">
                        <table id="recommendationTable" class="table"></table>
                    </div>
                </div>
                <div class="form-group">
                    <label for="controles" class="col-sm-3 control-label">Controles</label>
                    <div class="col-sm-3">
                        <select id="control" name="control" class="form-control"></select>
                    </div>
                    <div class="col-sm-2">
                        <button id="btnAddControl" type="button" class="btn btn-success">Adicionar</button>
                        <button id="btnNewControl" type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalControl">Nuevo</button>
                    </div>
                </div>
                <div class="form-group">
                    <label for="" class="col-sm-3 control-label"></label>
                    <div class="col-sm-9">
                        <table id="controlTable" class="table"></table>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal Effect-->
<div class="modal fade" id="modalEffect" tabindex="-1" role="dialog" aria-labelledby="modalEffect">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form id="formEffect">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Adicionar Efecto</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <label class="col-lg-offset-1" for="effectDescription">Descripción</label>
                    </div>
                    <div class="row">
                        <input class="form-control col-lg-offset-1" type="text" id="effectDescription" placeholder="" minlength="0" maxlength="150" required>
                    </div>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="modal-table">
                            <table class="table" id="modalEffectTable" ></table>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- Modal Recommendation-->
<div class="modal fade" id="modalRecommendation" tabindex="-1" role="dialog" aria-labelledby="modalRecommendation">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form id="formRecommendation">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Adicionar Recomendación</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <label class="col-lg-offset-1" for="recommendationType">Tipo</label>
                    </div>
                    <div class="row">
                        <select class="form-control col-lg-offset-1" id="recommendationType" name="recommendationType"></select>
                    </div>
                    <div class="row">
                        <label class="col-lg-offset-1" for="recommendationDescription">Descripción</label>
                    </div>
                    <div class="row">
                        <input class="form-control col-lg-offset-1" type="text" id="recommendationDescription" placeholder="" minlength="0" maxlength="100" required>
                    </div>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="modal-table">
                            <table class="table" id="modalRecommendationTable"></table>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- Modal Control-->
<div class="modal fade" id="modalControl" tabindex="-1" role="dialog" aria-labelledby="modalControl">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form id="formControl">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Adicionar Control</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <label class="col-lg-offset-1" for="controlWilcard">Comodín</label>
                    </div>
                    <div class="row">
                        <select class="form-control col-lg-offset-1 col-md-4" id="controlWilcard" name="comodin" >
                            <option value="Verificar que" selected>Verificar que</option>
                            <option value="Validar si">Validar si</option>
                        </select>
                    </div>
                    <div class="row">
                        <label class="col-lg-offset-1" for="controlDescription">Descripción</label>
                    </div>
                    <div class="row">
                        <textarea class="form-control col-lg-offset-1 col-md-6" rows="6" id="controlDescription" minlength="0" maxlength="150" required placeholder=""></textarea>
                        <div class="col-md-5">
                            La descripción del control debe ser precisa. No coloque una acción. indique lo que el cliente debe soportar para evidenciar que realiza el control
                        </div>
                    </div>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="modal-table">
                            <table class="table" id="modalControlTable"></table>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section scripts{
    @Scripts.Render("~/bundles/index")
}