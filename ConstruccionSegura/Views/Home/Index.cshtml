@{
    ViewBag.Title = "Principal";
}

<div class="jumbotron">
    <h2><span class="glyphicon glyphicon-wrench" aria-hidden="true"></span> Construcción Segura</h2>
    <p class="lead">Construcción Segura</p>
    @*<p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>*@
</div>

<div class="row">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3>Caracterización de Peligros</h3>
        </div>
        <div class="panel-body">
            <form class="form-horizontal">
                <div class="form-group">
                    <label for="agrupacionPeligro" class="col-sm-3 control-label">Agrupación de Peligro</label>
                    <div class="col-sm-3">
                        @Html.DropDownList("dangerGroup", (IEnumerable<SelectListItem>)ViewBag.dangerGroups, "Seleccione un grupo...", new { @class = "form-control" })
                    </div>
                    <label for="peligro" class="col-sm-2 control-label">Peligro</label>
                    <div class="col-sm-4">
                        <select id="danger" name="danger" class="form-control"></select>
                    </div>  
                </div>
                <div class="form-group">
                    <label for="posiblesEfectos" class="col-sm-3 control-label">Posibles Efectos</label>
                    <div class="col-sm-3">
                        <select id="effect" name="effect" class="form-control"></select>
                    </div>
                    <div class="col-sm-2">
                        <button id="btnAddEffect" type="button" class="btn btn-success">Adicionar</button>
                        <button id="btnNewEffect" type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalEffect">Nuevo</button>
                    </div>
                </div>
                <div class="form-group">
                    <label for="" class="col-sm-3 control-label"></label>
                    <div class="col-sm-3">
                        <table id="effectTable" class="table"></table>
                    </div>
                </div>
                <div class="form-group">
                    <label for="recomendaciones" class="col-sm-3 control-label">Recomendaciones Generales</label>
                    <div class="col-sm-3">
                        <select id="recommendation" name="recommendation" class="form-control"></select>
                    </div>
                    <div class="col-sm-2">
                        <button id="btnAddRecommendation" type="button" class="btn btn-success">Adicionar</button>
                        <button id="btnNewRecommendation" type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalRecommendation">Nueva</button>
                    </div>
                </div>
                <div class="form-group">
                    <label for="" class="col-sm-3 control-label"></label>
                    <div class="col-sm-3">
                        <table id="recommendationTable" class="table"></table>
                    </div>
                </div>
                <div class="form-group">
                    <label for="controles" class="col-sm-3 control-label">Controles</label>
                    <div class="col-sm-3">
                        <select id="control" name="control" class="form-control"></select>
                    </div>
                    <div class="col-sm-2">
                        <button id="btnAddControl" type="button" class="btn btn-success">Adicionar</button>
                        <button id="btnNewControl" type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalControl">Nuevo</button>
                    </div>
                </div>
                <div class="form-group">
                    <label for="" class="col-sm-3 control-label"></label>
                    <div class="col-sm-3">
                        <table id="controlTable" class="table"></table>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal Effect-->
<div class="modal fade" id="modalEffect" tabindex="-1" role="dialog" aria-labelledby="modalEffect">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Adicionar Efecto</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="effectDescription">Descripción</label>
                        <input type="text" class="form-control" id="effectDescription" placeholder="">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary">Guardar</button>
            </div>
        </div>
    </div>
</div>
<!-- Modal Recommendation-->
<div class="modal fade" id="modalRecommendation" tabindex="-1" role="dialog" aria-labelledby="modalRecommendation">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Adicionar Recomendación</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="recommendationType">Tipo</label>
                        <select id="recommendationType" name="recommendationType" class="form-control"></select>
                    </div>
                    <div class="form-group">
                        <label for="recommendationDescription">Descripción</label>
                        <input type="text" class="form-control" id="recommendationDescription" placeholder="">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary">Guardar</button>
            </div>
        </div>
    </div>
</div>
<!-- Modal Control-->
<div class="modal fade" id="modalControl" tabindex="-1" role="dialog" aria-labelledby="modalControl">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Adicionar Control</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="controlWilcard">Comodín</label>
                        <select id="wilcard" name="comodin" class="form-control">
                            <option value="Verificar que">Verificar que</option>
                            <option value="Verificar que">Validar si</option> 
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="recommendationDescription">Descripción</label>
                        <textarea class="form-control" rows="6" id="recommendationDescription" placeholder="La descripción del control debe ser precisa. No coloque una acción. indique lo que el cliente debe soportar para evidenciar que realiza el control"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary">Guardar</button>
            </div>
        </div>
    </div>
</div>

@section scripts{

    <script src="~/Scripts/jquery-ui.js"></script>
    <script src="~/ViewManager/Common/common.js"></script>
    <script src="~/ViewManager/Common/ajax.js"></script>
    <script src="~/ViewManager/Common/message.js"></script>
    <script src="~/ViewManager/App/index.js"></script>

    @*@Scripts.Render("~/bundles/History")*@
}